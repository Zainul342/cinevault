{
    "name": "cinevault/backend",
    "description": "CineVault - Premium Movie Streaming Dashboard Backend",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.10",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8080 -t public",
        "lint": "find src -name '*.php' -exec php -l {} \\;"
    },
    "config": {
        "optimize-autoloader": true
    }
}